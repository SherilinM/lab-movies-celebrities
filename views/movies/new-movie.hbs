<div class="container">
    <div class="row justify-content-center">
        <div class="cold-md-6">
            <h1>New movie</h1>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="dorm-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Genre</label>
                    <input type="text" class="dorm-control" id="title" name="genre">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Plot</label>
                    <input type="text" class="dorm-control" id="title" name="plot">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Cast</label>
                    <select name="cast" class="form-select">
                        {{#each celebrities}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>

                </div>

                <button type="submit" class="btn btn-dark">New movie</button>
                <a href="/" class="btn btn-dark">Home</a>
            </form>
        </div>
    </div>
</div>